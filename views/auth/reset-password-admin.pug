extends ../layout/index

block contenido 
  div.py-10
    h1.text-4xl.my-10.font-extrabold.text-center Consultorio
     span.font-normal Medico        
    h2.text-center.text-2xl.font-extrabold= pagina

    if errores
      div(class="max-w-md mx-auto my-10")
        each error in errores
         p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg 

    div.mt-8.mx-auto.max-w-md
      .bg-white.py-8.px-4.shadow

         form.space-y-4(method="POST"  noValidate)          
            input(type="hidden" name="_csrf" value= csrfToken)

            div
              label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Coloca Nuevo Password
              input#password.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="Tu Nuevo Password" type="password" name="password")
            
            input(class="w-full bg-red-50 hover:bg-cyan-400 rounded-lg border-solid border-2 border-cyan-400 text-black font-bold py-3 cursor-pointer" type="submit" value="Guardar Password")
