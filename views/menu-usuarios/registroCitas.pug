extends ../layout/index

block contenido 
   div.py-5
     h2.text-center.text-2xl.font-extrabold= pagina

     if errores 
         div(class="max-w-md mx-auto my-10")
            each error in errores
               p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

               
    
   div.mt-5.mx-auto.max-w-screen-lg
      .bg-white.opacity-90.py-8.px-4.shadow.rounded-lg(class=" shadow-lg shadow-pink-400/50")
         form.space-y-4(class="grid grid-cols-2 gap-3" method="POST" action="/menu-usuarios/registroCitas" noValidate)
            input(type="hidden" name="_csrf" value= csrfToken)

            div
               label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Nombre
               input#nombre.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder=" Nombre" type="text" name="nombre" value= cita ? cita.nombre : '' )       
            
        
            div
               label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="apellidos") Apellidos
               input#apellidos.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="apellidos" type="text" name="apellidos" value= cita ? cita.apellidos : '' )

            div
               label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="documento") Documento
               input#documento.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder=" Documento" type="number" name="documento" value= cita ? cita.documento : '' )                  
                
            div
               label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="fecha_nacimiento") Fecha de Nacimiento
               input#fecha_nacimiento.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="Fecha de Nacimiento" type="date" name="fecha_nacimiento" value= cita ? cita.fecha_nacimiento : '') 

            div
               label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="edad") Edad
               input#edad.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="Edad" type="number" name="edad" value= cita ? cita.edad : '')
            
            div
               label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email
               input#email.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="Email" type="email" name="email" value= cita ? cita.email : '')

            div
               label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="telefono") Teléfono
               input#telefono.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder=" Teléfono" type="number" name="telefono" value= cita ? cita.telefono : '') 

            div
               label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="servicio_medico") Servicio Medico
               input#servicio_medico.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="Servicio Medico" type="text" name="servicio_medico" value= cita ? cita.servicio_medico : '')
            
            
            div
               label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="especialidad") Especialidad
               input#especialidad.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="Especialidad" type="text" name="especialidad" value= cita ? cita.especialidad : '' )

            div
               label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="fecha_cita") Fecha de la Cita
               input#fecha_cita.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder=" Fecha de la Cita" type="date" name="fecha_cita" value= cita ? cita.fecha_cita : '')        
            
                
            div
               label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="hora_cita") Hora de la Cita
               input#hora_cita.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="Hora de la Cita" type="time" name="hora_cita" value= cita ? cita.hora_cita : '' )




            input(class="w-full bg-red-50 hover:bg-cyan-400 rounded-lg border-solid border-2 border-cyan-400 text-black font-bold py-3 cursor-pointer " type="submit" value="Registrar")