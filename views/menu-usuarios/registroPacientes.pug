extends ../layout/index-menu-usuarios

block contenido 
  div.py-10         
    h2.text-center.text-3xl.font-extrabold= pagina 

    if errores
      div(class="max-w-md mx-auto my-10")
        each error in errores
         p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=error.msg 

    div.mt-5.mx-auto.max-w-screen-lg
      .bg-white.opacity-90.py-8.px-4.shadow.rounded-lg(class=" shadow-lg shadow-pink-400/50")
         form.space-y-4(class="grid grid-cols-2 gap-2" method="POST" action="/menu-usuarios/registroPacientes")
            input(type="hidden" name="_csrf" value= csrfToken)  

            div
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Nombre
                  input#nombre.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder=" Nombre" type="text" name="nombre" value= paciente ? paciente.nombre : '' )       
               
         
            div
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="apellidos") Apellidos
                  input#apellidos.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="apellidos" type="text" name="apellidos" value= paciente ? paciente.apellidos : '' )

            div
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="documento") Documento
                  input#documento.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder=" Documento" type="number" name="documento" value= paciente ? paciente.documento : '' )                  
                  
            div
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="fecha_nacimiento") Fecha de Nacimiento
                  input#fecha_nacimiento.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="Fecha de Nacimiento" type="date" name="fecha_nacimiento" value= paciente ? paciente.fecha_nacimiento : '') 

            div
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="edad") Edad
                  input#edad.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="Edad" type="text" name="edad" value= paciente ? paciente.edad : '')         
               
            div
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email
                  input#email.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="email" type="email" name="email" value= paciente ? paciente.email : '' )

            div
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="telefono") Tel√©fono
                  input#telefono.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder=" telefono" type="number" name="telefono" value= paciente ? paciente.telefono : '')        
               
                  
            div
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="Servicio_medico") Servicio Medico
                  input#servicio_medico.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="Servicio Medico" type="text" name="servicio_medico" value= paciente ? paciente.servicio_medico : '' )



            input(class="w-full bg-red-50 hover:bg-cyan-400 rounded-lg border-solid border-2 border-cyan-400 text-black font-bold py-3 cursor-pointer " type="submit" value="Registrar")

