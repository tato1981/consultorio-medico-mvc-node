extends ../layout/index-menu-pagos

block contenido 
  
  div.py-2           
    h2.text-center.text-2xl.font-extrabold= pagina

    if errores
      div(class="max-w-md mx-auto my-10")
        each error in errores
         p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg 

  div.mt-5.mx-auto.max-w-screen-lg
      .bg-white.opacity-90.py-8.px-4.shadow.rounded-lg(class=" shadow-lg shadow-pink-400/50")
         form.space-y-4(class="grid grid-cols-2 gap-2 " method="POST" action="#"  noValidate)
            input(type="hidden" name="_csrf" value= csrfToken)

            div
               label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="numero_card") Numero de Tarjeta
               input#numero_card.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder=" Numero de la Tarjeta" type="text" name="numero_card" value= pago ? pago.numero_card: '' required)         
                        
            div
               label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="titular-card") titular de la tarjeta
               input#titular_card.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="Titular de la Cuenta" type="text" name="titular_card" value= pago ? pago.titular_card: '' required)

            div
               label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="vencimiento") Fecha de vencimiento
               input#vencimiento.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="MM/AA " type="text" name="vencimiento" value= pago ? pago.vencimiento: '' required)         
                        
            div
               label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="cvv") CVV
               input#cvv.w-full.px-3.py-1.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="cvv" type="password"  name="cvv" value= pago ? pago.cvv: ''  required )           
              
            

            input(class="w-full bg-red-50 hover:bg-cyan-400 rounded-lg border-solid border-2 border-cyan-400 text-black font-bold py-3 cursor-pointer" type="submit" value="Pagar")


    
          
            